<idea-plugin>
    <id>cn.cpoet.ideas</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>CPoet Ideas</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="llzero54@foxmail.com" url="https://www.cpoet.cn">王国富(CPoet)</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
    <b>CPoet Ideas</b>是结合自己平时开发中的实际需求和编码习惯而编写的<b>Idea插件</b>。
    <br/>
    <b>主要功能：</b>
    <ol>
        <li>支持Base64编码和解码；</li>
        <li>支持生成UUID；</li>
        <li>支持下划线转驼峰、驼峰转下划线；</li>
        <li>支持快速跳转到输出（编译）文件，打开输出（编译后）文件所在的目录；</li>
        <li>支持快速生成补丁包（适用于增量发包）；</li>
        <li>支持快速生成实体的set方法调用并随机默认值；</li>
        <li>支持快速生成实体和实体间、实体和Map间的转换代码；</li>
    </ol>
  ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.vcs</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>com.intellij.database</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable parentId="tools"
                                 instance="cn.cpoet.ideas.ic.setting.IdeasConfigurable"
                                 id="cn.cpoet.ideas.ic.setting.IdeasConfigurable"
                                 displayName="CPoet Ideas"/>

        <!--        <intentionAction>-->
        <!--            <className>cn.cpoet.ideas.iu.actions.java.action.AllSetIntentionAction</className>-->
        <!--        </intentionAction>-->

        <!--        <intentionAction>-->
        <!--            <className>cn.cpoet.ideas.iu.actions.java.action.AllGetIntentionAction</className>-->
        <!--        </intentionAction>-->
    </extensions>

    <actions>
        <group id="CPoetIdea_EditorPopupMenu"
               text="CPoet Ideas"
               popup="true">
            <separator/>
            <add-to-group group-id="EditorPopupMenu" relative-to-action="EditorToggleColumnMode" anchor="after"/>
            <group id="CPoetIdea_EditorPopupMenu_FILE"
                   text="File"
                   popup="true">
            </group>

            <group id="CPoetIdea_EditorPopupMenu_TEXT"
                   text="Text"
                   popup="true">
            </group>

            <group id="CPoetIdea_EditorPopupMenu_BASE64"
                   text="Base64"
                   popup="true">
            </group>

            <group id="CPoetIdea_EditorPopupMenu_PATCH"
                   text="Patch"
                   popup="true">
            </group>
        </group>

        <group id="CPoetIdea_Console.TableResult.CellEditor.Popup"
               text="CPoet Ideas"
               popup="true"
        >
            <separator/>
            <add-to-group group-id="Console.TableResult.CellEditor.Popup" anchor="after"
                          relative-to-action="EditorToggleColumnMode"/>
            <group id="CPoetIdea_Console.TableResult.CellEditor.Popup_TEXT"
                   text="Text"
                   popup="true">
            </group>

            <group id="CPoetIdea_Console.TableResult.CellEditor.Popup_BASE64"
                   text="Base64"
                   popup="true">
            </group>
        </group>

        <action id="cn.cpoet.ideas.ic.actions.file.action.OpenOutputFileAction"
                class="cn.cpoet.ideas.ic.actions.file.action.OpenOutputFileAction"
                text="Open Output File"
                description="Open Output file">
            <add-to-group group-id="CPoetIdea_EditorPopupMenu_FILE"/>
        </action>

        <action id="cn.cpoet.ideas.ic.actions.file.action.OpenOutputFileInExplorerAction"
                class="cn.cpoet.ideas.ic.actions.file.action.OpenOutputFileInExplorerAction"
                text="Open Output In Explorer"
                description="Open output file in explorer">
            <add-to-group group-id="CPoetIdea_EditorPopupMenu_FILE"/>
        </action>

        <action id="cn.cpoet.ideas.ic.actions.common.action.UUIDGenerateAction"
                class="cn.cpoet.ideas.ic.actions.common.action.UUIDGenerateAction"
                text="Generate UUID"
                description="Generate UUID">
            <add-to-group group-id="CPoetIdea_EditorPopupMenu_TEXT"/>
            <add-to-group group-id="CPoetIdea_Console.TableResult.CellEditor.Popup_TEXT"/>
        </action>

        <action id="cn.cpoet.ideas.ic.actions.common.action.ConvertToCamelAction"
                class="cn.cpoet.ideas.ic.actions.common.action.ConvertToCamelAction"
                text="Convert To Camel"
                description="Convert to Camel text">
            <add-to-group group-id="CPoetIdea_EditorPopupMenu_TEXT"/>
            <add-to-group group-id="CPoetIdea_Console.TableResult.CellEditor.Popup_TEXT"/>
        </action>

        <action id="cn.cpoet.ideas.ic.actions.common.action.ConvertToUnderlineAction"
                class="cn.cpoet.ideas.ic.actions.common.action.ConvertToUnderlineAction"
                text="Convert To Underline"
                description="Convert to Underline text">
            <add-to-group group-id="CPoetIdea_EditorPopupMenu_TEXT"/>
            <add-to-group group-id="CPoetIdea_Console.TableResult.CellEditor.Popup_TEXT"/>
        </action>

        <action id="cn.cpoet.ideas.ic.actions.common.action.Base64EncodeAction"
                class="cn.cpoet.ideas.ic.actions.common.action.Base64EncodeAction"
                text="Encode"
                description="Encode base64">
            <add-to-group group-id="CPoetIdea_EditorPopupMenu_BASE64"/>
            <add-to-group group-id="CPoetIdea_Console.TableResult.CellEditor.Popup_BASE64"/>
        </action>

        <action id="cn.cpoet.ideas.ic.actions.common.action.Base64DecodeAction"
                class="cn.cpoet.ideas.ic.actions.common.action.Base64DecodeAction"
                text="Decode"
                description="Decode base64">
            <add-to-group group-id="CPoetIdea_EditorPopupMenu_BASE64"/>
            <add-to-group group-id="CPoetIdea_Console.TableResult.CellEditor.Popup_BASE64"/>
        </action>

        <action id="cn.cpoet.ideas.iu.actions.patch.action.GenPatchPackageAction"
                class="cn.cpoet.ideas.iu.actions.patch.action.GenPatchPackageAction"
                text="Generate Patch Package"
                description="Generate Patch package">
            <add-to-group group-id="CPoetIdea_EditorPopupMenu_PATCH"/>
        </action>
    </actions>
</idea-plugin>