<idea-plugin>

    <depends>com.intellij.spring</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!--        <intentionAction>-->
        <!--            <className>cn.cpoet.tool.iu.actions.java.action.AllSetIntentionAction</className>-->
        <!--        </intentionAction>-->

        <!--        <intentionAction>-->
        <!--            <className>cn.cpoet.tool.iu.actions.java.action.AllGetIntentionAction</className>-->
        <!--        </intentionAction>-->
    </extensions>

    <actions>
        <group id="CPoetTool_File_JAVA">
            <add-to-group group-id="CPoetTool_EditorPopupMenu"/>
            <separator />
            <action id="OpenOutputFileAction_java"
                    class="cn.cpoet.tool.actions.file.OpenOutputFileAction"
                    text="Open Output File"
                    description="Open Output file">
            </action>

            <action id="OpenOutputFileInExplorerAction_java"
                    class="cn.cpoet.tool.actions.file.OpenOutputFileInExplorerAction"
                    text="Open Output In Explorer"
                    description="Open output file in explorer">
            </action>
        </group>

        <group id="CPoetTool_Patch_JAVA">
            <add-to-group group-id="CPoetTool_EditorPopupMenu"/>
            <add-to-group group-id="CPoetTool_ProjectViewPopupMenu" />
            <separator />
            <action id="GenPatchPackageAction_java"
                    class="cn.cpoet.tool.actions.patch.GenPatchPackageAction"
                    text="Generate Patch"
                    description="Generate Patch package">
            </action>

            <action id="ReplacePatchPackageAction_java"
                    class="cn.cpoet.tool.actions.patch.ReplacePatchAction"
                    text="Replace Patch"
                    description="Replace Patch package">
            </action>
        </group>
    </actions>
</idea-plugin>
