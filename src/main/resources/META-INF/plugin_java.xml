<idea-plugin>

    <depends>com.intellij.spring</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!--        <intentionAction>-->
        <!--            <className>cn.cpoet.ideas.iu.actions.java.action.AllSetIntentionAction</className>-->
        <!--        </intentionAction>-->

        <!--        <intentionAction>-->
        <!--            <className>cn.cpoet.ideas.iu.actions.java.action.AllGetIntentionAction</className>-->
        <!--        </intentionAction>-->
    </extensions>

    <actions>
        <group id="CPoetIdea_EditorPopupMenu_FILE"
               text="File"
               popup="true">
            <add-to-group group-id="CPoetIdea_EditorPopupMenu"
                          relative-to-action="CPoetIdea_EditorPopupMenu_TEXT"
                          anchor="before"/>
        </group>

        <group id="CPoetIdea_EditorPopupMenu_PATCH"
               text="Patch"
               popup="true">
            <add-to-group group-id="CPoetIdea_EditorPopupMenu"
                          relative-to-action="CPoetIdea_EditorPopupMenu_BASE64"
                          anchor="after"/>
        </group>

        <action id="OpenOutputFileAction_java"
                class="cn.cpoet.ideas.actions.file.action.OpenOutputFileAction"
                text="Open Output File"
                description="Open Output file">
            <add-to-group group-id="CPoetIdea_EditorPopupMenu_FILE"/>
        </action>

        <action id="OpenOutputFileInExplorerAction_java"
                class="cn.cpoet.ideas.actions.file.action.OpenOutputFileInExplorerAction"
                text="Open Output In Explorer"
                description="Open output file in explorer">
            <add-to-group group-id="CPoetIdea_EditorPopupMenu_FILE"/>
        </action>

        <action id="GenPatchPackageAction_java"
                class="cn.cpoet.ideas.actions.patch.action.GenPatchPackageAction"
                text="Generate Patch"
                description="Generate Patch package">
            <add-to-group group-id="CPoetIdea_EditorPopupMenu_PATCH"/>
        </action>

        <action id="GenPatchPackageVcsAction_java"
                class="cn.cpoet.ideas.actions.patch.action.GenPatchPackageVcsAction"
                text="Generate Patch(VCS)"
                description="Generate Patch package by VCS">
            <add-to-group group-id="CPoetIdea_EditorPopupMenu_PATCH"
                          relative-to-action="GenPatchPackageAction_java"
                          anchor="after"/>
        </action>
    </actions>
</idea-plugin>
