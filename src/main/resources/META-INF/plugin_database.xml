<idea-plugin>
    <actions>
        <group id="CPoetTool_Console.TableResult.CellEditor.Popup"
               text="CPoet Tool"
               popup="true"
               searchable="false"
        >
            <separator/>
            <add-to-group group-id="Console.TableResult.CellEditor.Popup" anchor="after"
                          relative-to-action="EditorToggleColumnMode"/>
            <group id="CPoetTool_Console.TableResult.CellEditor.Popup_TEXT"
                   text="Text"
                   popup="true">
            </group>

            <group id="CPoetTool_Console.TableResult.CellEditor.Popup_BASE64"
                   text="Base64"
                   popup="true">
            </group>
        </group>

        <action id="UUIDGenerateAction_database"
                class="cn.cpoet.tool.actions.common.action.UUIDGenerateAction"
                text="Generate UUID"
                description="Generate UUID">
            <add-to-group group-id="CPoetTool_Console.TableResult.CellEditor.Popup_TEXT"/>
        </action>

        <action id="ConvertToCamelAction_database"
                class="cn.cpoet.tool.actions.common.action.ConvertToCamelAction"
                text="Convert To Camel"
                description="Convert to Camel text">
            <add-to-group group-id="CPoetTool_Console.TableResult.CellEditor.Popup_TEXT"/>
        </action>

        <action id="ConvertToUnderlineAction_database"
                class="cn.cpoet.tool.actions.common.action.ConvertToUnderlineAction"
                text="Convert To Underline"
                description="Convert to Underline text">
            <add-to-group group-id="CPoetTool_Console.TableResult.CellEditor.Popup_TEXT"/>
        </action>

        <action id="Base64EncodeAction_database"
                class="cn.cpoet.tool.actions.common.action.Base64EncodeAction"
                text="Encode"
                description="Encode base64">
            <add-to-group group-id="CPoetTool_Console.TableResult.CellEditor.Popup_BASE64"/>
        </action>

        <action id="Base64DecodeAction_database"
                class="cn.cpoet.tool.actions.common.action.Base64DecodeAction"
                text="Decode"
                description="Decode base64">
            <add-to-group group-id="CPoetTool_Console.TableResult.CellEditor.Popup_BASE64"/>
        </action>
    </actions>
</idea-plugin>
